<section class="framework-menu {{ hidden }}">
  <div class="container">
    <div class="row">
      <div class="framework-tab-headers">
        <span data-target="html5-frameworks">HTML5</span> | 
        <span data-target="compile-to-native-frameworks">Compile to Native</span> | 
        <span data-target="native-frameworks">Native</span>
      </div>
      <div class="col-xs-12">
        <div class="html5-frameworks framework-tab">
          <h2 class="hidden-xs">HTML5</h2>
          {{#each pages}}
            {{#if html5}}
              <div class="framework">
                <a href="{{ ../site.baseurl }}{{ page.destination }}" draggable="false">
                  <span class="icon-wrapper">
                    <img {{#if wideIcon }} class="wide-icon" {{/if}} src="{{ ../site.baseurl }}/frameworks/{{ framework }}/{{ framework }}.png" draggable="false"/>
                  </span>{{{ title }}}
                  <span class="language">[{{ language }}]</span>
                </a>
              </div>
              {{#if clearfix}}
                <div class="clearfix"></div>
              {{/if}}
            {{/if}}
          {{/each}}
        </div>
        <div class="compile-to-native-frameworks framework-tab hidden">
          <h2 class="hidden-xs">COMPILE TO NATIVE</h2>
          {{#each pages}}
            {{#if compile_to_native}}
              <div class="framework">
                <a href="{{ ../site.baseurl }}{{ page.destination }}" draggable="false">
                  <span class="icon-wrapper">
                    <img {{#if wideIcon }} class="wide-icon" {{/if}} src="{{ ../site.baseurl }}/frameworks/{{ framework }}/{{ framework }}.png" draggable="false"/>
                  </span>{{{ title}}}
                  <span class="language">[{{ language }}]</span>
                </a>
              </div>
              {{#if clearfix}}
                <div class="clearfix"></div>
              {{/if}}
            {{/if}}
          {{/each}}
        </div>
      </div>
      <div class="col-xs-12 native-frameworks framework-tab hidden">
        <h2 class="hidden-xs">NATIVE</h2>
        {{#each pages}}
          {{#if native}}
            <div class="framework">
              <a href="{{ ../site.baseurl }}{{ page.destination }}" draggable="false">
                <img {{#if wideIcon }} class="wide-icon" {{/if}} src="{{ ../site.baseurl }}/assets/android.png" draggable="false"/><img src="{{ ../site.baseurl }}/assets/ios.png" draggable="false"/> <span> Android and iOS </span><span class="language hidden-xs"> [Java and Objective-C]</span>
              </a>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
    </div>
  </div>
  </div>
</section>
